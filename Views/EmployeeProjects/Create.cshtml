@model iitu_project_hh.Controllers.EmployeeProject
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Добавить сотрудника";
}

<h2>Добавить сотрудника в проект</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Добавить сотрудника в проект</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
            @Html.LabelFor(model => model.EmployeeId, "Сотрудник", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("EmployeeId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Employee.EmployeeName, "", new { @class = "text-danger" })
            </div>
    </div>




        <div class="form-group">
            @Html.LabelFor(model => model.Project, "Проект", htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.DropDownList("ProjectId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Project.ProjectName, "", new { @class = "text-danger" }) 
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить в проект" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Все проекты", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
