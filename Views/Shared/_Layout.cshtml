@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - приложение ASP.NET</title>
    @Scripts.Render("~/Scripts/jquery-3.5.1.min.js")
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/main/style.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">
            <img src="https://upload.wikimedia.org/wikipedia/commons/7/79/HeadHunter_logo.png" alt="Alternate Text" width="50px" style="padding-right:10px" />
        </a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                @if (Request.IsAuthenticated)
                {
                    <li class="nav-item mr-3 ">@Html.ActionLink("Информация", "About", "Home")</li>
                    <li class="nav-item mr-3">@Html.ActionLink("Связаться", "Contact", "Home")</li>
                    <li class="nav-item mr-3">@Html.ActionLink("Новости", "Index", "NewsModels")</li>
                    <li class="nav-item mr-3">@Html.ActionLink("Вакансии", "AllProjects", "EmployeeProjects")</li>
                    <li class="nav-item mr-3">@Html.ActionLink("Сотрудники в проектах", "Index", "EmployeeProjects")</li>
                    <li class="nav-item mr-3">@Html.ActionLink("Проекты", "Index", "Projects")</li>
                    <li class="nav-item mr-3">@Html.ActionLink("Сотрудники", "Index", "Employees")</li>
                }
            </ul>
            <form class="form-inline my-2 my-lg-0">
                @Html.Partial("_LoginPartial")
            </form>
        </div>
    </nav>
    <div style="margin-top:50px; max-width: 1450px; margin: 0 auto;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - мое приложение Madiyar Umirzakov</p>
        </footer>
    </div>


    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
